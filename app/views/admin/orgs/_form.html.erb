<%= form_for [:admin, @org] do |f| %>
  收費標準：<%= f.collection_select :identity_id, 
              Identity.all.order(id: :asc), 
              :id, :classification %> <br />
  名稱：<%= f.text_field :name %> <br />
  全名：<%= f.text_area :official_name %> <br />
  地址：<%= f.text_area :address %> <br />
  電話：<%= f.text_area :tel %> <br />
  備註：<%= f.text_area :note %> <br />

  <div class="form-actions">
    <%= f.submit "Submit", :disable_with => 'Submitting...', :class => "btn btn-primary"%>
  </div>
<% end %>