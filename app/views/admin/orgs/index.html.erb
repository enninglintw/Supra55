<div class="col-md-12">

  <div>
    <h1>所有使用單位</h1>
  </div>
  
  <div class="org">
    <%= link_to("新增使用單位", new_admin_org_path, :class => "btn btn-primary pull-right" ) %>

    <table class="table table-hover">
      <thead> 
        <tr>
          <th> # </th>
          <th> 名稱 </th>
          <th> 全名 </th>
          <th> 收費標準 </th>
          <th> 電話 </th>
          <th> 地址 </th>
          <th> 備註 </th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @orgs.each do |org| %> 
        <tr>
          <td> <%= org.id %> </td>
          <td> <%= link_to(org.name, admin_org_path(org)) %> </td>
          <td> <%= org.official_name %> </td>
          <td> <%= link_to(org.identity.classification, admin_identity_path(org.identity_id)) %> </td>
          <td> <%= org.tel %> </td>
          <td> <%= org.address %> </td>
          <td> <%= org.note %> </td>
          <td> <%= link_to(" Edit", 
                           edit_admin_org_path(org), 
                           :class => "btn btn-primary fa fa-pencil-square-o")%>
               <%= link_to(" Delete", 
                           admin_org_path(org), 
                           :class => "btn btn-danger fa fa-trash-o", 
                           :method => :delete,
                           data: { confirm: "Are you sure?" } )%></td> 
        </tr>
        <% end %> 
      </tbody>
    </table>
  </div>

</div>