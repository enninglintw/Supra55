<div class="col-md-12">
  <div class="member">
    <%= link_to("編輯使用者", edit_admin_member_path(@member), :class => "btn btn-primary pull-right")%> 
  </div>
  <h1> 使用者 </h1>
  <h2> <%= @member.name %> </h2>
  <p> 電話： <%= @member.tel %> </p>
  <p> 隸屬單位： <%= @member.org.name %> </p>
  <p> 分類： <%= @member.org.identity.classification %> </p>
  <p> 申請教學資格： <%= @member.education_permitted %> </p>
  <p> SEI教學完成： <%= @member.educated_for_sei %> </p>
  <p> SEI執照： <%= @member.license_for_sei %> </p>
 
  <%= link_to("新增使用記錄", new_admin_record_path, :class => "btn btn-primary pull-right")%>
  <h3>使用記錄</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th> # </th>
        <th colspan="2"> 時間 </th>
        <th colspan="5"> 使用時數 </th>
        <th colspan="7"> 使用費 </th>
        <th colspan="3"> 其他 </th>
        <th colspan="2"> </th>
      </tr>
      <tr>
        <th> # </th>
        <th> 開始時間 </th>
        <th> 結束時間 </th>
        <th> SEI </th>
        <th> SEI + EDS </th>
        <th> SEI + EBSD </th>
        <th> SEI + EDS + EBSD </th>
        <th> 總時數 </th>
        <th> SEI </th>
        <th> SEI + EDS </th>
        <th> SEI + EBSD </th>
        <th> SEI + EDS + EBSD </th>
        <th> 原價 </th>
        <th> 折扣 </th>
        <th> 總價 </th>
        <th> 是否已開繳費通知單？ </th>
        <th> 是否已繳費？ </th>
        <th> 各使用單位當年度累計金額 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |record| %>
      <tr>
        <td> <%= record.id %> </td>
        <td> <%= render_record_start_at(record) %> </td>
        <td> <%= render_record_end_at(record) %> </td>
        <td> <%= record.sei_hr %> </td>
        <td> <%= record.sei_eds_hr %> </td>
        <td> <%= record.sei_ebsd_hr %> </td>
        <td> <%= record.sei_eds_ebsd_hr %> </td>
        <td> <%= sum_hr(record) %> </td>
        <td> <%= sei_price(record) %> </td>
        <td> <%= sei_eds_price(record) %> </td>
        <td> <%= sei_ebsd_price(record) %> </td>
        <td> <%= sei_eds_ebsd_price(record) %> </td>
        <td> <%= original_price(record) %> </td>
        <td> <%= discount(record) %> </td>
        <td> <%= sum_price(record) %> </td>
        <td> <%= record.payment_notice %> </td>
        <td> <%= record.paid %> </td>
        <td> <%= sum_price_of_the_member(record) %> </td>
        <td> <%= link_to("Edit", 
                         edit_admin_record_path(record), 
                         :class => "btn btn-sm btn-default")%>
             <%= link_to("Delete", 
                         admin_record_path(record), 
                         :class => "btn btn-sm btn-default", 
                         :method => :delete,
                         data: { confirm: "Are you sure?" } )%> </td> 
      </tr>
      <% end %>
    </tbody>
  </table>
</div>