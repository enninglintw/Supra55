<div class="col-md-12"> 
  <table class="table table-hover">
    <thead> 
      <tr>
        <th> # </th>
        <th> 名稱 </th>
        <th> 全名 </th>
        <th> 地址 </th>
        <th> 電話 </th>
        <th> 收費標準 </th>
        <th> 備註 </th>
      </tr>
    </thead>

    <tbody>
      <% @orgs.each do |org| %> 
      <tr>
        <td>  <%= link_to(org.id, org_path(org)) %> </td>
        <td>  <%= link_to(org.name, org_path(org)) %> </td>
        <td>  <%= org.official_name %> </td>
        <td>  <%= org.address %> </td>
        <td>  <%= org.tel %> </td>
        <td>  <%= org.identity_id %> </td>
        <td>  <%= org.note %> </td>
        <td>  <%= link_to("Edit", 
                          edit_org_path(org), 
                          :class => "btn btn-sm btn-default")%>

              <%= link_to("Delete", 
                          org_path(org), 
                          :class => "btn btn-sm btn-default", 
                          :method => :delete,
                          data: { confirm: "Are you sure?" } )%></td> 
      </tr>
      <% end %> 
    </tbody>
  </table>
</div>