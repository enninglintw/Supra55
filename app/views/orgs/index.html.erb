<div class="col-md-12"> 
  <div class="org">
    <%= link_to("新增使用單位", new_org_path , :class => "btn btn-primary pull-right" ) %>
  </div>

  <table class="table table-hover">
    <thead> 
      <tr>
        <td> # </td>
        <td> 名稱 </td>
        <td> 全名 </td>
        <td> 地址 </td>
        <td> 電話 </td>
        <td> 備註 </td>
      </tr>
    </thead>

    <tbody>
      <% @orgs.each do |org| %> 
      <tr>
        <td>  <%= link_to(org.id, org_path(org)) %> </td>
        <td>  <%= link_to(org.name, org_path(org)) %> </td>
        <td>  <%= org.official_name %> </td>
        <td>  <%= org.address %> </td>
        <td>  <%= org.tel %> </td>
        <td>  <%= org.note %> </td>
        <td>  <%= link_to("Edit", 
                          edit_org_path(org), 
                          :class => "btn btn-sm btn-default")%>

              <%= link_to("Delete", 
                          org_path(org), 
                          :class => "btn btn-sm btn-default", 
                          :method=>:delete,
                          data: { confirm: "Are you sure?" } )%></td> 
      </tr>
      <% end %> 
    </tbody>
  </table>
</div>